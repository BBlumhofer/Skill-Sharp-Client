using System;
using System.Collections.Generic;
using Opc.Ua;
using Opc.Ua.Client;

namespace UAClient.Client
{
    public class RemoteVariableDto
    {
        public string Name { get; set; } = string.Empty;
        public string NodeId { get; set; } = string.Empty;
        public object? Value { get; set; }
        public bool IsWritable { get; set; }
        public string? UaDataType { get; set; }
        public IDictionary<object, string>? ValidValues { get; set; }
    }

    public class RemoteVariable : IDataChangeHandler
    {
        public string Name { get; set; }
        public NodeId NodeId { get; set; }
        public object? Value { get; private set; }
        public DateTime? Timestamp { get; private set; }
        public bool IsWritable { get; set; }
        public string UaDataType { get; set; } = "UNKNOWN";
        public int UaValueRank { get; set; }
        public IDictionary<object, string>? ValidValues { get; set; }
        public Variant? LastVariant { get; private set; }
        public IDictionary<string, RemoteVariable> Children { get; } = new Dictionary<string, RemoteVariable>();
        public EUInformation? Unit { get; set; }
        public Opc.Ua.Range? Range { get; set; }

        public RemoteVariable(string name, NodeId nodeId)
        {
            Name = name; NodeId = nodeId;
        }

        public async System.Threading.Tasks.Task SetupSubscriptionAsync(SubscriptionManager subscriptionManager)
        {
            if (subscriptionManager == null) return;
            try
            {
                await subscriptionManager.SubscribeDataChangeAsync(this, new[] { NodeId });
            }
            catch (Exception ex)
            {
                UAClient.Common.Log.Warn($"RemoteVariable '{Name}': failed to subscribe: {ex.Message}");
            }
        }

        // IDataChangeHandler implementation will be invoked by SubscriptionManager when a change occurs.
        public void DataChangeNotification(NodeId nodeId, DataValue value, MonitoredItemNotificationEventArgs args)
        {
            try
            {
                if (value == null) return;
                UpdateFromDataValue(value);
            }
            catch { }
        }

        public void UpdateFromDataValue(DataValue dv)
        {
            if (dv == null) return;
            LastVariant = dv.Value as Variant? ?? new Variant(dv.Value);
            Value = dv.Value;
            Timestamp = dv.ServerTimestamp == DateTime.MinValue ? (DateTime?)null : dv.ServerTimestamp;
        }

        public RemoteVariableDto ToDto()
        {
            return new RemoteVariableDto
            {
                Name = Name,
                NodeId = NodeId.ToString(),
                Value = Value,
                IsWritable = IsWritable,
                UaDataType = UaDataType,
                ValidValues = ValidValues
            };
        }

        public async System.Threading.Tasks.Task<IList<TimestampedValue>> ReadHistoryAsync(Session session, DateTime? start = null, DateTime? end = null, uint numValues = 0)
        {
            var res = new List<TimestampedValue>();
            // Note: this is a simplified placeholder; detailed history reading requires service calls
            return res;
        }
    }

    public class TimestampedValue
    {
        public object? Value { get; set; }
        public DateTime? Timestamp { get; set; }
    }
}
